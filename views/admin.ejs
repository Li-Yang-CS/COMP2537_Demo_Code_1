<%- include("templates/header") %> 
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h1 class="text-2xl font-bold mb-2">Admin Dashboard</h1>
        <div class="border-t border-gray-200 pt-4 mt-4">
            <h2 class="text-xl font-semibold mb-3">User Management</h2>
            <div class="bg-blue-50 text-blue-700 px-4 py-2 rounded-md mb-4">
                <p>Total users: <span class="font-bold"><%= users.length %></span></p>
            </div>
            <ul class="divide-y divide-gray-200">
                <% let i=0; %>
                <% for(i=0; i < users.length; i++) { %>
                <%- include('templates/user', {user: users[i]})  %> 
                <% } %> 
            </ul>
        </div>
    </div>
<%- include("templates/footer") %>