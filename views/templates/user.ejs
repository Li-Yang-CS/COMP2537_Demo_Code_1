<li class="border-b border-gray-200 py-3 flex justify-between items-center">
    <div class="flex gap-2">
        <span class="font-medium"><%= user.username %></span>
        <span class="px-2 py-1 text-xs rounded-full <%= user.user_type === 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-gray-100 text-gray-800' %>">
            <%= user.user_type %>
        </span>
    </div>
    <% if (user.user_type === "user") { %>
        <a href="/promote/<%= user._id %>" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm">Promote to Admin</a>
    <% } else { %>
        <a href="/demote/<%= user._id %>" class="bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm">Demote to User</a>
    <% } %>
</li>